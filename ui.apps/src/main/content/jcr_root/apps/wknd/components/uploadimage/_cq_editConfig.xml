<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          cq:dialogMode="inline"
          cq:layout="rollover"
          jcr:primaryType="cq:EditConfig">  <!--    Defines a list of drop targets that can accept a drop from an asset of the content finder-->  <!--    In this current example, it allows for the image to be changed by dropping it inside the component automatically, instead of-->  <!--    having to open the dialog-box and insert it in the image field.-->
    <cq:dropTargets
            jcr:primaryType="nt:unstructured">
        <image
                jcr:primaryType="cq:DropTargetConfig"
                accept="[image/.*]"
                groups="[media]"
                propertyName="./fileReference">
            <parameters
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="aem-learning/components/uploadimage"/>
        </image>
    </cq:dropTargets>
</jcr:root>
